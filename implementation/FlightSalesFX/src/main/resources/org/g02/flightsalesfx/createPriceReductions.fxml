<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.g02.flightsalesfx.CreatePriceReductions">
   <children>
      <HBox layoutX="400.0" layoutY="400.0" prefHeight="200.0" prefWidth="400.0">
         <children>
            <VBox prefWidth="150.0">
               <children>
                  <TextField fx:id="redName" prefHeight="25.0" prefWidth="150.0" promptText="Name" />
                  <DatePicker fx:id="startDate" prefWidth="150.0" promptText="Start Date" />
                  <DatePicker fx:id="endDate" prefHeight="25.0" prefWidth="150.0" promptText="End Date" />
                  <CheckBox fx:id="isPercent" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" text="In percent" />
               </children>
            </VBox>
            <VBox prefWidth="150.0">
               <children>
                  <TextField fx:id="redPrice" prefHeight="25.0" prefWidth="150.0" promptText="Reduction Price" />
                  <HBox>
                     <children>
                        <ComboBox fx:id="startHour" prefHeight="25.0" prefWidth="75.0" promptText="HH" visibleRowCount="5" />
                        <ComboBox fx:id="startMin" prefHeight="25.0" prefWidth="75.0" promptText="MM" visibleRowCount="5" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <ComboBox fx:id="endHour" prefHeight="25.0" prefWidth="75.0" promptText="HH" visibleRowCount="5" />
                        <ComboBox fx:id="endMin" prefHeight="25.0" prefWidth="75.0" promptText="MM" visibleRowCount="5" />
                     </children>
                  </HBox>
                  <Button fx:id="addReduction" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" styleClass="buttonOrange" text="Add Reduction" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
